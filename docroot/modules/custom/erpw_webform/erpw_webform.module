/**
 * Alter the default csv generated by 'Views Data Export' module and add additional fields.
 */
function erpw_webform_views_data_export_row_alter(&$row, ResultRow $result, $view) {
  if ($view->id() == 'service_based_service_providers_listing' && $view->current_display == 'data_export_1') {
    $webform_submission = $result->_entity;

    if ($webform_submission && $webform_submission instanceof WebformSubmission) {

      $elements = $webform_submission->getData();
      $webform = $webform_submission->getWebform();

      // Fields to exclude.
      $excluded_fields = ['erpw_workflow', 'field_name_of_the_focal_point', 'field_phone_number', 'location', 'field_mode', 'organisation', 'orignal_data', 'submission_domain'];

      // Iterate over the fields and add only desired fields to the row.
      foreach ($elements as $field_key => $field_value) {
        // Exclude unwanted fields.
        if (!in_array($field_key, $excluded_fields)) {
          $field_name = erpw_webform_transform_field_name($webform, $field_key);

          if (is_array($field_value)) {
            // Check if the field is of 'mapping' type.
            if (erpw_webform_is_mapping_field($webform, $field_key)) {
              // Format the 'mapping' field value.
              $field_value = erpw_webform_format_mapping_field_value($field_value);
            }
            else {
              // If value is a simple array, convert it to a string representation.
              $field_value = implode(', ', $field_value);
            }
          }
          elseif ($field_key == 'service_type') {
            $node = Node::load($field_value);
            if ($node) {
              $field_value = $node->getTitle();
            }
            else {
              $field_value = t('Invalid Service Type');
            }
          }

          // Add the field value to the row with the modified field name.
          $row[$field_name] = $field_value ?? '';
        }
      }

      // Last Updated field.
      $last_updated_timestamp = $webform_submission->getChangedTime();
      $row['Last Updated'] = \Drupal::service('date.formatter')->format($last_updated_timestamp, 'custom', 'd/m/Y H:i:s');
    }
  }
}

/**
 * Gets the field label from the webform configuration.
 *
 * @param \Drupal\webform\Entity\Webform $webform
 *   The webform entity.
 * @param string $field_machine_name
 *   The machine name of the field.
 *
 * @return string
 *   The field label.
 */
function erpw_webform_transform_field_name(Webform $webform, $field_machine_name) {
  // Get the webform element.
  $webform_element = $webform->getElement($field_machine_name);

  // Return the field label if available, or use the machine name as a fallback.
  return $webform_element ? $webform_element['#title'] : ucwords(str_replace('_', ' ', $field_machine_name));
}

/**
 * Checks if the field is of 'mapping' type.
 *
 * @param \Drupal\webform\Entity\Webform $webform
 *   The webform entity.
 * @param string $field_machine_name
 *   The machine name of the field.
 *
 * @return bool
 *   TRUE if the field is of 'mapping' type, FALSE otherwise.
 */
function erpw_webform_is_mapping_field(Webform $webform, $field_machine_name) {
  // Get the webform element.
  $webform_element = $webform->getElement($field_machine_name);
  // Check if the element type is 'mapping'.
  return isset($webform_element['#type']) && $webform_element['#type'] == 'webform_mapping';
}

/**
 * Formats the value of a 'mapping' field.
 *
 * @param array $field_value
 *   The value of the 'mapping' field.
 *
 * @return string
 *   The formatted value.
 */
function erpw_webform_format_mapping_field_value(array $field_value) {
  // Format the 'mapping' field value as per the specified requirements.
  $formatted_value = [];
  foreach ($field_value as $label => $value) {
    $formatted_value[] = "$label - $value";
  }

  return implode(', ', $formatted_value);
}

/**
 * Implements hook__entity_access().
 */
function erpw_webform_entity_access(EntityInterface $entity, $operation, AccountInterface $account) {
  $user_roles = $account->getRoles();
  $user = User::load(\Drupal::currentUser()->id());
  $domainAccess = $user->get('field_domain_access')->getValue();
  $x = 0;
  $currentRoute = \Drupal::routeMatch()->getRouteName();
  if ($entity->getEntityTypeId() == 'webform') {
    $tpa = $entity->getThirdPartySetting('erpw_webform', 'webform_service_type_map');
    foreach ($user_roles as $key_r => $role) {
      if ($role == 'country_admin' || $role == 'interagency_gbv_coordinator') {
        if (is_null($tpa)) {
          $x++;
          return AccessResult::allowed();
        }
        else {
          foreach ($domainAccess as $key => $domain) {
            if (is_array($tpa)) {
              if (array_key_exists($domain['target_id'], $tpa)) {
                $x++;
                return AccessResult::allowed();
              }
            }
          }
        }
      }
      if ($role == 'super_admin' ||$role == 'administrator') {
        $x++;
        return AccessResult::allowed();
      }
      if (($role == 'service_provider_focal_point' || $role == 'service_provider_staff') || $role == 'gbv_focal_point' && $currentRoute == 'entity.node.canonical') {
        $x++;
        return AccessResult::allowed();
      }
      if (($role == 'service_provider_focal_point' || $role == 'service_provider_staff') || $role == 'gbv_focal_point' && $currentRoute == 'entity.webform.canonical') {
        $x++;
        return AccessResult::allowed();
      }
    }
    if ($x == 0) {
      return AccessResult::forbidden();
    }
  }
  $s = 0;
  if ($entity->getEntityTypeId() == 'webform_submission') {
    $webformID = $entity->get('webform_id')->getValue()[0]['target_id'];
    $webform = \Drupal::entityTypeManager()->getStorage('webform')->load($webformID);
    $tpa = $webform->getThirdPartySetting('erpw_webform', 'webform_service_type_map');
    foreach ($user_roles as $key_r => $role) {
      if ($role == 'country_admin' || $role == 'interagency_gbv_coordinator' || $role == 'service_provider_staff' || $role == 'service_provider_focal_point' || $role == 'gbv_focal_point') {
        foreach ($domainAccess as $key => $domain) {
          if (is_array($tpa)) {
            if (array_key_exists($domain['target_id'], $tpa)) {
              $s++;
              return AccessResult::allowed();
            }
          }
        }
      }
      if ($role == 'super_admin' || $role == 'administrator') {
        $s++;
        return AccessResult::allowed();
      }
    }
    if ($s == 0) {
      return AccessResult::forbidden();
    }
  }
}

