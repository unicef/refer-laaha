{{ attach_library('vss_custom/subcategory_hero_block') }}

{% if content is not empty %}
  <div class="hero-banner container">
    <div class="banner-left col-12 col-md-6">
      <span class="thumbnail-icon icon-{{ content.type}}"></span>
      <img src="{{file_url(content.thumbnail|image_style('hero_thumbnail'))}}" alt="{{ content.thumbnail_alt }} "/>
    </div>
    <div class="banner-right col-12 col-md-6">
      <h2 class="banner-title">{{content.title}}</h2>
        <a href="/{{ lang_code }}/{{content.url}}" class="banner-cta cta" aria-label="hero cta">{{'READ MORE'|t }}</a>
    </div>
  </div>
{% endif %}
