{{ attach_library('vss_custom/subcategory_hero_block') }}

{% if content is not empty %}
  <div class="hero-banner container">
    <div class="banner-left col-12 col-md-6">
      <span class="thumbnail-icon icon-{{ content.type}}"></span>
      <img src="{{file_url(content.thumbnail|image_style('hero_thumbnail'))}}"/>
    </div>
    <div class="banner-right col-12 col-md-6">
      <h3 class="banner-title">{{content.title}}</h3>
      {% if lang_code != 'en' %}
        <a href="/{{ lang_code }}/{{content.url}}" target='_blank' class="banner-cta cta">{{'READ MORE'|t }}</a>
      {% else %}
        <a href="/{{content.url}}" target='_blank' class="banner-cta cta">{{'READ MORE'|t }}</a>
      {% endif %}
    </div>
  </div>
{% endif %}
