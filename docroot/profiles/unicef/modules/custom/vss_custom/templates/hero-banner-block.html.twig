{{ attach_library('vss_custom/hero_banner_block') }}
{% if content is not empty %}
<div class="hero_banner">
  <div class="row">
  {% if category.cat_name is not empty %}
   <h2 class="banner text-center"><img src ="/{{category.cat_icon}}" alt="" />
   <span>{{ category.cat_name }}</span>
   </h2>
  {% endif %}
 <div class="hero-wrapper">
 <div class="row">
{% for key,value in content %}
  <div class="col-sm-3 col-xs-6 hero-col text-center">
    {% if lang_code != 'en' %}
      <a href="/{{lang_code}}/{{value.url}}" target='_blank'><img class="category-imgs" src ="/{{value.sub_category_thumbnail}}" alt="" /><span class="subcat-name">{{ value.subcat_name }}</span></a>
    {% else %}
      <a href="/{{value.url}}" target='_blank'><img src ="/{{value.sub_category_thumbnail}}" alt="" /><span class="subcat-name">{{ value.subcat_name }}</span></a>
    {% endif %}
    </div>
{% endfor %}
</div>
</div>
</div>
{% endif %}
<style>
.wrapper{
  background:#{{category.cat_color}};	
}
</style>
