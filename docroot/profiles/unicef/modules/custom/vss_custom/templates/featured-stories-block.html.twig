{{ attach_library('vss_custom/featured_stores_block') }}
		{% if content is not empty %}
			<div class="featured-stories">
				<div class="container">
          <h3 class="text-center featured-head"><img src="/{{ base_path ~ directory }}/images/featured-head-icon.png" alt="featured"/><span>{{'Featured Stories'|t}}</span></h3>
					<div class="featured_stories_block">
						<div class="row">
							{% for key,value in content|slice(0, 2) %}
								<div class="col-sm-6 two-slice {{value.type}}">
                  {% if lang_code != 'en' %}
										<a class={{value.type}} href="/{{lang_code}}/{{value.url}}" target='_blank'>
											<div class = "featured-thumbnail">
												<img class="two-slice-img" src="{{ file_url(value.thumbnail| image_style('featured_categories_big')) }}" alt=""/>
												<span class="video-time">{{ value.video_time }} {{ value.podcast_time }}</span>
												{% if value.type == 'video' %}
												  <img class="play-circle"  src="/{{ base_path ~ directory }}/images/play-circle.png" alt='play btn' />
												{% elseif value.type == 'podcast' %}
												  <img class="play-circle-podcast"  src="/{{ base_path ~ directory }}/images/play-circle-pod.png" alt='play btn pod' />
											  {% endif %} 
										</div>
										<span>{{ value.title }} {% if value.read_time %}{{'[ '}} {{ value.read_time }} {{'mins ]'|t }}{% endif %}</span>
										</a>
									{% else %}
										<a class={{value.type}} href="/{{value.url}}" target='_blank'>
											<div class = "featured-thumbnail">
												<img class="two-slice-img" src="{{ file_url(value.thumbnail|image_style('featured_categories_big')) }}" alt=""/>
												<span class="video-time">{{ value.video_time }} {{ value.podcast_time }}</span>
												{% if value.type == 'video' %}
													<img class="play-circle"  src="/{{ base_path ~ directory }}/images/play-circle.png" alt='play btn' />
												{% elseif value.type == 'podcast' %}
													<img class="play-circle-podcast"  src="/{{ base_path ~ directory }}/images/play-circle-pod.png" alt='play btn pod' />
												{% endif %}
											</div>
											<span>{{ value.title }} {% if value.read_time %}{{ '[ ' }} {{ value.read_time }} {{ 'mins ]'|t }}{% endif %}</span>
                    </a>
									{% endif %}
                </div>
							{% endfor %}
              </div>
              <div class="row">
							{% for key,value in content|slice(2, 6) %}
								<div class="col-sm-3 four-slice {{value.type}}">
									{% if lang_code != 'en' %}
										<a class={{value.type}} href="/{{lang_code}}/{{value.url}}" target='_blank'>
											<div class = "featured-thumbnail">
												<img class="four-slice-img" src="{{ file_url(value.thumbnail | image_style('featured_categories_small')) }}" alt=""/>
												<span class="video-time">{{ value.video_time }} {{ value.podcast_time }}</span>
												{% if value.type == 'video' %}
													<img class="play-circle"  src="/{{ base_path ~ directory }}/images/play-circle.png" alt='play btn' />
												{% elseif value.type == 'podcast' %}
													<img class="play-circle-podcast"  src="/{{ base_path ~ directory }}/images/play-circle-pod.png" alt='play btn pod' />
												{% endif %}
											</div>
											<span>{{ value.title }} {% if value.read_time %}{{'[ ' }} {{ value.read_timen }} {{'mins ]'|t }}{% endif %}</span>
                    </a>
									{% else %}
										<a class={{value.type}} href="/{{value.url}}" target='_blank'>
											<div class = "featured-thumbnail">
												<img  class="four-slice-img" src="{{ file_url(value.thumbnail | image_style('featured_categories_small') ) }}" alt=""/>
												<span class="video-time">{{ value.video_time }} {{ value.podcast_time }}</span>
												{% if value.type == 'video' %}
													<img class="play-circle"  src="/{{ base_path ~ directory }}/images/play-circle.png" alt='play btn' />
												{% elseif value.type == 'podcast' %}
													<img class="play-circle-podcast"  src="/{{ base_path ~ directory }}/images/play-circle-pod.png" alt='play btn pod' />
												{% endif %}
											</div>
											<span>{{ value.title }} {% if value.read_time %}{{'[ ' }}{{ value.read_time }} {{ 'mins ]'|t }}{% endif %}</span>
                    </a>
									{% endif %}
                </div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		{% endif %}
